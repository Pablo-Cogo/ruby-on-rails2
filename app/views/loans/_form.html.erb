<%= form_with(model: loan, local: true) do |form| %>
  <% if loan.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mt-4 mb-4">
      <h2 class="text-red-800 font-semibold"><%= pluralize(loan.errors.count, "error") %> prohibited this loan from being saved:</h2>

      <ul class="list-disc ml-8">
        <% loan.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :student_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.collection_select :student_id, Student.all, :id, :name, { prompt: "Select student" }, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :book_id, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.collection_select :book_id, Book.all, :id, :title, { prompt: "Select book" }, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :quantity, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.number_field :quantity, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="mb-4">
    <%= form.label :expected_return_date, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.date_select :expected_return_date, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
  </div>

  <div class="flex items-center justify-end">
    <%= form.submit "Save", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full cursor-pointer" %>
  </div>
<% end %>
